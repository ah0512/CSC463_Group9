int LEFT_MOTOR = 0;
int RIGHT_MOTOR = 2;
int LIGHT_SENSOR = 6;
int time = 0;
int LINE = 20;
int turn = 0;

void stop()
{
    off(LEFT_MOTOR);
    off(RIGHT_MOTOR);
}

void main() {
  while(1)
      {
      stop();
      sleep(0.05);
      printf("Sensor = %d\n", analog(LIGHT_SENSOR));
