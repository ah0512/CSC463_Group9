                  motor(LEFT_MOTOR, 20);
                   motor(RIGHT_MOTOR, -20);
                   // bk(0);
                  sleep(0.5);
                }
              
              stop();
              sleep(1.0);
              if(analog(LIGHT_SENSOR) >= LINE) {  
                  printf("Sensor = %d\n", analog(LIGHT_SENSOR));
                  break;
