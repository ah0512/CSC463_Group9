int LEFT_MOTOR = 0;
int RIGHT_MOTOR = 2;
int REFLECTIVE_RIGHT = 5;
int REFLECTIVE_LEFT = 6;
int LIGHT_SENSOR = 4;
int time = 0;
int WALL = 225;
int SOURCE = 30;

void forward(int power) {    
   motor(RIGHT_MOTOR, power);    
   motor(LEFT_MOTOR, power);
}

void backward(int power) {
   motor(RIGHT_MOTOR, -power);       
   motor(LEFT_MOTOR, -power);
}

void turnLeft(int power) {
   motor(RIGHT_MOTOR, power);    
   motor(LEFT_MOTOR, 0);
}

void turnRight(int power) {
   motor(RIGHT_MOTOR, 0);    
   motor(LEFT_MOTOR, power);   
}

void stop() {
   off(RIGHT_MOTOR);
   off(LEFT_MOTOR);
}

void main() {
      while(1) {
         printf("Sensor: %d %d\n", analog(REFLECTIVE_RIGHT), analog(REFLECTIVE_LEFT));
         forward(60);
         sleep(0.1);
        if((analog(REFLECTIVE_RIGHT) < WALL) && (analog(REFLECTIVE_LEFT) < WALL)) {
            backward(75);
            sleep(0.35);
            while(analog(LIGHT_SENSOR) < SOURCE) {
               forward(80);
            }
            for( time = 0; time < 20; time++) {
               turnLeft(90 );
               sleep(0.2);
               if(REFLECTIVE_RIGHT < WALL) {
                  turnRight(90);
                  sleep(2.0);
                  break;
               }
            }
         }
      }
}
